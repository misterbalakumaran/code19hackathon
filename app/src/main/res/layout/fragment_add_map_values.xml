<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GovtNavigation.ui.Map.AddMapValues">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<EditText
    android:id="@+id/lat"
    android:hint="Enter the latitude to add"
    android:layout_marginTop="100dp"
    android:background="@drawable/rounded_corner"
    android:backgroundTint="@null"
    android:textAlignment="center"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_width="match_parent"
    android:layout_height="35dp"/>
    <EditText
        android:id="@+id/lang"
        android:hint="Enter the longitude to add"
        android:layout_below="@id/lat"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rounded_corner"
        android:textAlignment="center"

        android:layout_width="match_parent"
        android:layout_height="35dp"/>
    <TextView
        android:text="OR"
        android:textSize="20dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/csv"
        android:text="Upload csv for Alternate choice"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#35A853"
        android:textColor="#fff"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lang"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/csv"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:text="The csv contains only latitude and longitude field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
<Button
    android:id="@+id/loc"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:text="Get location"
    android:layout_alignParentRight="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <Button
    android:id="@+id/submit"
    android:text="submit"
    android:layout_marginBottom="50dp"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
android:background="@drawable/rounded_corner"
    android:backgroundTint="#cf1020"
    android:textColor="#fff"

    android:layout_width="wrap_content"
    android:layout_height="30dp"/>

</RelativeLayout>

</FrameLayout>
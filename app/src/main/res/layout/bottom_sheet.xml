<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="16dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="90dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/a1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route Profile"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/personaffected"
        android:layout_width="wrap_content"
        android:layout_below="@id/a1"
        android:layout_marginTop="50dp"
        android:textSize="18dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/risk"
        android:layout_below="@id/personaffected"
        android:textSize="18dp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/affected_persons"
        android:layout_below="@id/risk"
        android:textSize="18dp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
<Button
    android:text="Show\n Route"
    android:background="#35A853"
    android:textColor="#fff"
    android:id="@+id/show"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/affected_persons"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
</RelativeLayout>
</RelativeLayout>
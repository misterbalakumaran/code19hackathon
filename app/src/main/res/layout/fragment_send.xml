<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/mobile"
        android:hint="Enter your mobile no"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/locationbt"
        android:layout_below="@+id/mobile"
        android:text="Click to Update your location"
        android:textColor="#fff"
        android:backgroundTint="#35A853"
        android:background="@drawable/rounded_corner"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
    <TextView
        android:id="@+id/textView"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/locationbt"
        android:layout_marginTop="20dp"
        android:text="what you provide"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
<RelativeLayout
    android:id="@+id/spinnerlayout"
    android:background="@drawable/rounded_corner"
    android:layout_below="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_marginLeft="30dp"
    android:backgroundTint="#000000"
    android:layout_marginTop="20dp"
    android:layout_marginRight="30dp"
    android:layout_height="wrap_content">
    <Spinner
        android:id="@+id/spinner"
        style="@style/Widget.AppCompat.DropDownItem.Spinner"
android:textAlignment="center"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:prompt="@string/list"
        />

</RelativeLayout>
    <RelativeLayout
        android:id="@+id/commentslayout"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corner"
        android:layout_marginRight="30dp"
        android:backgroundTint="#35A853"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/spinnerlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<EditText
    android:id="@+id/comments"
    android:layout_marginTop="20dp"
    android:background="@null"
    android:textAlignment="center"
    android:textColor="#fff"
    android:layout_centerHorizontal="true"
    android:textColorHint="#fff"
    android:layout_centerVertical="true"
    android:hint="Please describe the item you share"
    android:layout_width="match_parent"
    android:layout_height="130dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/submit"
        android:layout_marginTop="20dp"
    android:layout_below="@+id/commentslayout"
        android:background="@drawable/rounded_corner"
        android:layout_marginBottom="20dp"
        android:text="Submit"
        android:backgroundTint="#cf1020"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="35dp"/>
</RelativeLayout>
</ScrollView>